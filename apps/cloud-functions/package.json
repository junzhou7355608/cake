{
  "name": "cloud-functions",
  "version": "1.0.0",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "watch-ts": "tsc --watch",
    "watch-json": "chokidar \"src/**/*.json\" -c \"npm run copy-json\"",
    "copy-json": "copyfiles -u 1 \"src/**/*.json\" dist/",
    "build": "tsc && npm run copy-json",
    "dev": "npm-run-all --parallel watch-ts watch-json",
       "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "wx-server-sdk": "latest"
  },
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "copyfiles": "^2.4.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.1.0",
    "eslint": "^9.30.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*"
  }
}
